<br />
<div class="booyah-box col-xs-10 col-xs-offset-1">

<table>
  <thead>
    <tr>

      <th><span sytle="margin-left: 5em;">Title</span></th>
      <th><span style="margin-right: 5em;">Created At</span></th>
      <th><span sytle="margin-left: 5em;">Body</span></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr style="-moz-box-shadow: 1px 1px 2px 0 #d0d0d0;
  -webkit-box-shadow: 1px 1px 2px 0 #d0d0d0;
  box-shadow: 1px 1px 2px 0 #d0d0d0;
  background: #c5d5e5;
  border: 1px solid #ccc;
  border-color: #e4e4e4 #bebebd #bebebd #e4e4e4;
  padding:20px;
  margin-top: 10px;
  margin-bottom: 15px;
  height: auto;
  max-width: 100%">
        <td><%= link_to article.title, article_path(article) %></td><br />
        <td><%= time_ago_in_words(article.created_at) %></td>
      
        <td><%= @markdown.render(article.body).html_safe  %></td>
      
      

        <td><% if article.user.present? %></td>
        <td><span style="margin-right: 5em;"><small><%= article.user.email %></span></small></td>
        <% end %>
    
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>



<div class="pagination col-xs-10 col-xs-offset-1">
      <p><%= will_paginate @articles, previous_label: "Older", next_label: "Newer", renderer: BootstrapPagination::Rails %></p>
</div>
