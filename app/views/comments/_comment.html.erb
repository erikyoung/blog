

<div class="booyah-box-comments col-xs-10 col-xs-offset-1">
	<p><%= comment.content %></p>
	<p>Comment by: <%= comment.author_name %></p>
	<p>Posted <%= distance_of_time_in_words(comment.article.created_at, comment.created_at) %> ago</p>
		<% if user_signed_in? %>
		<% if comment.user_id == current_user.id %>
	<%= link_to 'Edit', edit_article_comment_path(comment.article, comment), class: 'btn btn-success' %>
	<%= link_to 'Delete', article_comment_path(comment.article, comment),  method: :delete, data: {confirm: "do you want to delete this comment?"}, class: 'btn btn-custom'  %>

<% end %>
<% end %>
</div>





