
<div class="booyah-box-comments col-xs-10 col-xs-offset-1">
<p><%= comment.content %></p>
	<% if user_signed_in? %>
		<% if comment.user_id == current_user.id %>
			<%= link_to 'Edit', edit_article_comment_path(comment.article_id, comment), class: 'btn btn-success' %>
			<%= link_to 'Delete', article_comment_path(comment.article_id, comment),  method: :delete, data: {confirm: "do you want to delete this comment?"}, class: 'btn btn-custom'  %>
		<% end %>
		<span class="text-muted pull-right"><%= comment.created_at.strftime("%d-%m-%Y %H:%M") %></span>
	<br />	
		
	<% end %>		
</div>
	
	 





